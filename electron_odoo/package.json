{
  "name": "sidaz-desktop",
  "version": "1.0.0",
  "description": "SIDAZ Subscription Management System - Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "unset ELECTRON_RUN_AS_NODE && electron .",
    "dev": "unset ELECTRON_RUN_AS_NODE && NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.sidaz.desktop",
    "productName": "SIDAZ",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.business",
      "icon": "assets/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": "AppImage"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^25.1.8"
  }
}
